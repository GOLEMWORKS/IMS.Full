@page "/infoinventory/{invId:int}"

@inject IViewInventoriesByIdUseCase ViewInventoriesByIdUseCase
@inject NavigationManager NavigationManager
@inject IJSRuntime _js

@if(inventory != null)
{
    <div class="col-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Инфо</th>
                    <th scope="col">Результат</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">ID в базе данных</th>
                    <td>@invId</td>
                </tr>
                <tr>
                    <th scope="row">Наименование</th>
                    <td>@inventory.InventoryName</td>
                </tr>
                <tr>
                    <th scope="row">Количество</th>
                    <td>@inventory.Quantity</td>
                </tr>
                <tr>
                    <th scope="row">Цена</th>
                    <td>@inventory.Price.ToString("c", new System.Globalization.CultureInfo("ru-RU"))</td>
                </tr>
            </tbody>
        </table>
    </div>
}
<br />
@*<RadzenButton Click="@Back" ButtonStyle="ButtonStyle.Secondary"  Icon="arrow_back" Text="Назад" Variant="Variant.Outlined"></RadzenButton>
<RadzenButton Click="@PrintMe" ButtonStyle="ButtonStyle.Secondary"  Icon="local_printshop" Text="Печать" Variant="Variant.Outlined"></RadzenButton>
<RadzenButton Click="@RedirectToEdit" ButtonStyle="ButtonStyle.Secondary" Icon="edit" Text="Редактировать" Variant="Variant.Outlined"></RadzenButton>*@

<div class="column">
    <button type="button"
            class="btn btn-primary"
            @onclick="@Back">
        <i class="fa fa-arrow-left"></i>
        Назад
    </button>
    <button type="button"
            class="btn btn-primary"
            @onclick="@PrintMe">
        <i class="fa fa-print"></i>
        Печать
    </button>
    <button type="button"
            class="btn btn-primary"
            @onclick="@RedirectToEdit">
        <i class="fa fa-pencil"></i>
        Редактор
    </button>
</div>

@code {
    [Parameter]
    public int invId { get; set; }

    private Inventory? inventory;

    protected override async Task OnInitializedAsync()
    {
        this.inventory = await ViewInventoriesByIdUseCase.ExecuteAsync(invId);
    }

    private void Back()
    {
        NavigationManager.NavigateTo("/inventories");
    }

    private async Task PrintMe()
        => await _js.InvokeVoidAsync("window.print");

    public void RedirectToEdit()
    {
        this.invId = invId;
        NavigationManager.NavigateTo($"/editinventory/{invId}");
    }

}
