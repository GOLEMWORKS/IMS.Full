@inject NavigationManager NavigationManager


@if(prod != null)
{
    <tr>
        <td class="w-25">@prod.ProductName</td>
        <td>@prod.ProductQuantity шт</td>
        <td class="w-25">@prod.ProductPrice.ToString("c", new System.Globalization.CultureInfo("ru-RU"))</td>
        <td>
            <div class="btn-group w-75">
                <button class="btn btn-outline-success"
                        type="button"
                    @onclick="@(() => RedirectToEdit(prod.ProductId))">
                    Редактировать
                    <i class="fa fa-pencil"></i>
                </button>
                <button class="btn btn-outline-primary"
                        type="button">
                    Информация
                    <i class="fa fa-info"></i>
                </button>
                <button class="btn btn-outline-danger"
                        type="button"
                    @onclick="@(() => Delete(prod))">
                    Удалить
                    <i class="fa fa-trash"></i>
                </button>
            </div>
        </td>
    </tr>
}
@code {
    [Parameter]
    public Product? prod { get; set; }

    private void RedirectToEdit(int id)
    {
        NavigationManager.NavigateTo($"/editproduct/{id}");
    }

    private void Delete(Product product)
    {
        
    }
}
